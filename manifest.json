{
  "manifest_version": 3,
  "name": "Mindmate AI (Extension)",
  "version": "1.0.0",
  "description": "Mindmate AI converted into a Chrome Extension popup.",
  "action": {
    "default_title": "Mindmate AI",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [],
  "host_permissions": [],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "icons/*", "*.png", "*.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}
